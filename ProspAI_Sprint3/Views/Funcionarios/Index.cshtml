@model IEnumerable<Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome_fun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email_fun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha_fun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_admissao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_fun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email_fun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha_fun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_admissao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_fun">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_fun">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_fun">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
